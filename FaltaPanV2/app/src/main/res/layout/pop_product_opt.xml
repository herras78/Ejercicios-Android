<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="12dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/dialog_product_opt"
    android:background="@drawable/dialog_border">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/undo_product_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:src="@drawable/ic_undo_white_48dp"
            app:backgroundTint="@color/material_blue_grey_800"
            app:borderWidth="0dp"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/strike_product_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:src="@drawable/ic_format_strikethrough_white_48dp"
            app:backgroundTint="@color/material_blue_grey_800"
            app:borderWidth="0dp"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/edit_product_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:src="@drawable/ic_border_color_white_48dp"
            app:backgroundTint="@color/material_blue_grey_800"
            app:borderWidth="0dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/delete_product_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:src="@drawable/ic_delete_white_48dp"
            app:backgroundTint="@color/material_blue_grey_800"
            app:borderWidth="0dp"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/cancel_product_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:src="@drawable/ic_clear_white_48dp"
            app:backgroundTint="@color/material_blue_grey_800"
            app:borderWidth="0dp"/>

    </LinearLayout>

</LinearLayout>
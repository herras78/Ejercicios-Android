<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#555555">

        <ImageView
            android:id="@+id/img_list"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="2dp"
            android:src="@drawable/ic_faltapan"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Nombre Lista"
            android:id="@+id/tit_list"
            android:layout_toRightOf="@+id/img_list"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="5 / 10 Productos"
            android:id="@+id/num_product"
            android:layout_below="@+id/tit_list"
            android:layout_alignLeft="@+id/tit_list" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="50% Completada"
            android:id="@+id/percent_product"
            android:layout_below="@+id/tit_list"
            android:layout_toRightOf="@+id/num_product"
            android:layout_marginLeft="5dp"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#ffd5d5d5"
            android:id="@+id/linea"
            android:layout_below="@+id/num_product"
            android:layout_toRightOf="@+id/img_list">
        </View>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:id="@+id/list_status"
            android:layout_below="@+id/num_product"
            android:layout_alignParentRight="true"
            android:src="@android:drawable/ic_menu_share"
            android:background="@color/material_blue_grey_800" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:id="@+id/list_delete"
            android:layout_below="@+id/num_product"
            android:layout_toLeftOf="@+id/list_status"
            android:src="@android:drawable/ic_menu_delete"
            android:background="@color/material_blue_grey_800" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
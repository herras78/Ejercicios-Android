<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="100dp"
android:layout_margin="3dp"
card_view:cardCornerRadius="5dp"
card_view:cardElevation="3dp"
card_view:cardUseCompatPadding="true">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#555555">

    <ImageView
        android:id="@+id/list_img"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="2dp"
        android:src="@drawable/ic_supermercado"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Nombre Lista"
        android:id="@+id/list_tit"
        android:layout_toRightOf="@+id/list_img"
        android:layout_margin="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="25/07/2015"
        android:id="@+id/list_date"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="3dp"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#ffd5d5d5"
        android:id="@+id/line_list"
        android:layout_below="@+id/list_tit"
        android:layout_toRightOf="@+id/list_img"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp">
    </View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="3/5 Productos"
        android:id="@+id/num_product"
        android:layout_below="@+id/line_list"
        android:layout_toRightOf="@+id/list_img"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="60% Completada"
        android:id="@+id/percent_list"
        android:layout_below="@+id/num_product"
        android:layout_toRightOf="@+id/list_img"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"/>
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:id="@+id/status_list"
        android:layout_below="@+id/line_list"
        android:layout_alignParentRight="true"
        android:src="@android:drawable/ic_menu_share"
        android:background="@color/material_blue_grey_800" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:id="@+id/delete_list"
        android:layout_below="@+id/line_list"
        android:layout_toLeftOf="@+id/status_list"
        android:src="@android:drawable/ic_menu_delete"
        android:background="@color/material_blue_grey_800" />

</RelativeLayout>
</android.support.v7.widget.CardView>
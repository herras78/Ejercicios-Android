<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="1dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/product_item_card"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#555555">

       <!-- <ImageView
            android:id="@+id/img_list"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="2dp"
            android:src="@drawable/ic_faltapan"/>-->

        <TextView
            android:id="@+id/product_tit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Product"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/product_cuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="5"
            android:layout_toRightOf="@+id/product_tit"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/product_cuantity_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Botellas"
            android:layout_toRightOf="@+id/product_cuantity"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="1.80â‚¬/u"
            android:layout_toRightOf="@+id/product_cuantity_unit"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/product_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="P"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"/>

        <View
            android:id="@+id/product_line"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#ffd5d5d5"
            android:layout_below="@+id/product_tit"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
        </View>

        <TextView
            android:id="@+id/product_family"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Product Family"
            android:layout_below="@+id/product_line"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/product_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Product Brand"
            android:layout_below="@+id/product_line"
            android:layout_toRightOf="@+id/product_family"
            android:layout_marginLeft="35dp"/>

        <TextView
            android:id="@+id/product_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="25/07/2015"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/product_line"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/product_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
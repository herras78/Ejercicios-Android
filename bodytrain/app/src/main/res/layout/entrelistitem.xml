<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lyentrelist"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#FFFFFF">
    
     <ImageView
        android:id="@+id/logoEntre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"/>
     
    <LinearLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical">
    	
        <TextView 
            android:id="@+id/LblTitEntre"
            android:textColor="#006699"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textStyle="bold"
			android:textSize="17dp"
			android:layout_marginLeft="3dp"/>
      
       	<LinearLayout
           	android:layout_width="fill_parent"
   			android:layout_height="wrap_content"
    		android:orientation="horizontal"
    		android:layout_marginTop="1dp">
    		
           <TextView android:id="@+id/LbltxtNumEntre"
            android:text="NÂº de Ejercicios:"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textStyle="normal"
			android:textColor="#777777"
			android:textSize="15dp"
			android:layout_marginLeft="3dp"/>
           
           <TextView android:id="@+id/LblNumEntre"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textStyle="bold"
			android:textColor="#777777"
			android:textSize="15dp"
			android:layout_marginLeft="5dp"/>
              
       </LinearLayout>
  
       <LinearLayout
           	android:layout_width="fill_parent"
   			android:layout_height="wrap_content"
    		android:orientation="horizontal"
    		android:layout_marginTop="1dp">
    		
           <TextView android:id="@+id/lblTiempoEntre"
               	android:text="Tiempo:"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textStyle="normal"
				android:textColor="#777777"
				android:textSize="14dp"
				android:layout_marginLeft="3dp"/>
        
	        <TextView android:id="@+id/LblMinEntre"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textStyle="bold"
				android:textColor="#777777"
				android:textSize="15dp"
				android:layout_marginLeft="5dp"/>
	        
	        <TextView android:id="@+id/lblIntensidadTxt"
               	android:text="Intensidad:"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textStyle="normal"
				android:textColor="#777777"
				android:textSize="14dp"
				android:layout_marginLeft="10dp"/>
	        
	        <TextView android:id="@+id/LblIntesidad"
	            android:textColor="#00FF00"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textStyle="bold"
				android:textSize="15dp"
				android:layout_marginLeft="5dp"/>"
              
       </LinearLayout>

    </LinearLayout>

</LinearLayout>
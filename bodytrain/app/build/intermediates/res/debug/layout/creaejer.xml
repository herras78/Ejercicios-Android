<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/portcreaeje"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="95dp"
        android:layout_gravity="top"
        android:src="@drawable/logo" />
            
        <LinearLayout 
            android:layout_width="fill_parent"
	    	android:layout_height="fill_parent"
	    	android:orientation="vertical">
        	<TextView 
                android:layout_width="fill_parent"
	    		android:layout_height="wrap_content"
	    		android:textSize="14dp"
	    		android:textStyle="bold"
	    		android:textColor="#003399"
	    		android:layout_marginLeft="2dp"
	    		android:text="Nombre del ejercicio:"/>
            
            <EditText 
                android:id="@+id/creanomeje"
                android:layout_width="220dp"
	    		android:layout_height="wrap_content"
	    		android:textSize="14dp"/>
   			
             <TextView 
                android:layout_width="fill_parent"
	    		android:layout_height="wrap_content"
	    		android:textSize="14dp"
	    		android:textStyle="bold"
	    		android:textColor="#003399"
	    		android:layout_marginLeft="2dp"
	    		android:text="Seleccione una imagen:"/>
             
             <Spinner 
                android:id="@+id/spimgejer"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="15dp" />
            
             <TextView 
                android:layout_width="fill_parent"
	    		android:layout_height="wrap_content"
	    		android:textSize="14dp"
	    		android:textStyle="bold"
	    		android:textColor="#003399"
	    		android:layout_marginLeft="2dp"
	    		android:text="Indique Series,Repeticiones y peso:"/>
             	
                 <LinearLayout  
	                android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:layout_marginTop="8dp"
		    		android:orientation="horizontal">
	             	
                    <TextView 
                   		android:layout_width="50dp"
			    		android:layout_height="wrap_content"
			    		android:layout_marginLeft="5dp"
			    		android:textSize="16dp"
			    		android:textStyle="normal"
			    		android:textColor="#003399"
			    		android:text="Series:"/> 
			    	
                     <TextView 
                        android:id="@+id/lblserejer"
                   		android:layout_width="40dp"
			    		android:layout_height="wrap_content"
			    		android:layout_marginLeft="5dp"
			    		android:layout_marginRight="5dp"
			    		android:textSize="15dp"
			    		android:textStyle="bold"
			    		android:textColor="#003399"
			    		android:text="1"/> 
			    	
                     <SeekBar
                        android:id="@+id/barserejer" 
                        android:layout_width="200dp"
			    		android:layout_height="match_parent"
			    		android:layout_marginLeft="2dp"
			    		android:max="5"
			    		android:progress="1"/>	  
		       	</LinearLayout>
		        
               	<LinearLayout  
	                android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:layout_marginTop="8dp"
		    		android:orientation="horizontal">
	             	
                    <TextView 
                   		android:layout_width="50dp"
			    		android:layout_height="wrap_content"
			    		android:layout_marginLeft="5dp"
			    		android:textSize="16dp"
			    		android:textStyle="normal"
			    		android:textColor="#003399"
			    		android:text="Repet:"/> 
			    		
		              <TextView 
                        android:id="@+id/lblrepejer"
                   		android:layout_width="40dp"
			    		android:layout_height="wrap_content"
			    		android:layout_marginLeft="5dp"
			    		android:layout_marginRight="5dp"
			    		android:textSize="15dp"
			    		android:textStyle="bold"
			    		android:textColor="#003399"
			    		android:text="10"/> 
			    	
                     <SeekBar
                        android:id="@+id/barrepejer" 
                        android:layout_width="200dp"
			    		android:layout_height="match_parent"
			    		android:layout_marginLeft="2dp"
			    		android:max="100"
			    		android:progress="10"/>
		              
	            </LinearLayout>	 
	            
               	<LinearLayout  
	                android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:layout_marginTop="8dp"
		    		android:orientation="horizontal">
	             	
                    <TextView 
                   		android:layout_width="50dp"
			    		android:layout_height="wrap_content"
			    		android:layout_marginLeft="5dp"
			    		android:textSize="16dp"
			    		android:textStyle="normal"
			    		android:textColor="#003399"
			    		android:text="Peso:"/> 
			    		
		              <TextView 
                        android:id="@+id/lblpesejer"
                   		android:layout_width="40dp"
			    		android:layout_height="wrap_content"
			    		android:layout_marginLeft="5dp"
			    		android:layout_marginRight="5dp"
			    		android:textSize="15dp"
			    		android:textStyle="bold"
			    		android:textColor="#003399"
			    		android:text="10Kg"/> 
			    	
                     <SeekBar
                        android:id="@+id/barpesejer" 
                        android:layout_width="200dp"
			    		android:layout_height="match_parent"
			    		android:layout_marginLeft="1dp"
			    		android:max="100"
			    		android:progress="10"/>
		              
	            </LinearLayout>	  

	            <ImageButton 
			        android:id="@+id/btngrabaeje"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="50dp"
			        android:layout_gravity="center_horizontal"
			        android:src="@drawable/guardaeje"/>"
       	
        </LinearLayout>
</LinearLayout><!-- From: file:/D:/workspace/Android_Ejercicios/Ejercicios/bodytrain/app/src/main/res/layout/creaejer.xml -->